<% # ADA filter and UNISEX filter have inconsistant default boolean values because i'm using the format originally used by the Safe2Pee db because the engineers were stupid and used different 1 for ADA and 0 for UNISEX. %>


<div class="header">

<div class="search">
	<div class="toiletLogo" id="logo"></div>
	<%= form_tag bathrooms_path, :method => :get do %>
	<div class="searchBarContainer">
		<%= text_field_tag :search, params[:search], :class => "searchBar" %>
	</div>
	<%= submit_tag "Search", :type => 'button', :name => nil, :class=> "linkbutton searchButton submitButton" %>
	<%= submit_tag "", :type => 'button', :name => nil, :class=> "linkbutton currentLocationButton" %>
	<%= hidden_field_tag :lat, "" %>
	<%= hidden_field_tag :long, "" %>
</div>
<div class="nav">
  <div class="adaFilter filter">
    <%= check_box_tag :adafilter, 1, params[:adafilter] == '1', :class => 'adacheck submitButton' %>
    <label for="adafilter" class="adaFilterlabel linkbutton">
      <img src="<%= asset_path("ADABathroom.png") %>" class='adafilterlabelimage' />
      <span class="adafilterlabeltext"><%= params[:adafilter] == '1' ? "ON" : "OFF" %> </span>
    </label>
  </div>

  <div class="unisexFilter filter">
    <%= check_box_tag :unisexfilter, 0, params[:unisexfilter] == '0', :class => 'unisexcheck submitButton' %>
    <label for="unisexfilter" class="unisexFilterlabel linkbutton">
      <img src="<%= asset_path("UnisexBathroom.png") %>" class='unisexfilterlabelimage' />
      <span class="unisexfilterlabeltext"><%= params[:unisexfilter] == '0' ? "ON" : "OFF" %></span>
    </label>
  </div>

  <div class="mapToggle">
    <div class="mapTogglelabel linkbutton">
      Map View
    </div>
  </div>
</div>

  <% end %>

</div>