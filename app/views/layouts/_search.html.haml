- splash = false if local_assigns[:splash].nil?
.search.constraint
  = form_tag restrooms_path, :method => :get do
    = content_tag (splash ? :center : :div) do
      .searchBarContainer
        = text_field_tag :search, params[:search], :class => "searchBar form-control"
        = hidden_field_tag :lat, ""
        = hidden_field_tag :long, ""
        %button.searchButton.btn.btn-default{:title => 'Search', :value => "Search"}
          %i.fa.fa-search.fa-2x
        %button.currentLocationButton.btn.btn-default{:title => 'Search by current location', :value => (splash ? "Search Current Location" : nil )}
          %i.fa.fa-location-arrow.fa-2x
