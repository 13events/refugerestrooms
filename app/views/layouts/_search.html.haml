- splash = false if local_assigns[:splash].nil?
.constraint
  .search
    = form_tag restrooms_path, class: "search-restrooms-form", method: :get do
      .searchBarContainer
        = text_field_tag :search, params[:search], :class => "search-bar form-control"
      = hidden_field_tag :lat, ""
      = hidden_field_tag :long, ""
      = submit_tag "Search", :type => 'button', :name => nil, :class=> "submit-search-button btn btn-default"
      = submit_tag "", :type => 'button', :name => nil, :class=> "current-location-button btn btn-default", :title => 'Search by current location', :value => (splash ? "Search Current Location" : nil)
